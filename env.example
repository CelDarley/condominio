# Configurações de ambiente para SegCond
# Copie este arquivo para .env e ajuste as configurações

# Chave secreta para sessões Flask (gere uma chave única e segura)
SECRET_KEY=sua-chave-secreta-muito-segura-aqui

# Configuração do banco de dados MySQL
DATABASE_URL=mysql+pymysql://usuario:senha@localhost/segcond_db

# Configurações de desenvolvimento
FLASK_ENV=development
FLASK_DEBUG=True

# Configurações de produção (descomente para produção)
# FLASK_ENV=production
# FLASK_DEBUG=False

# Configurações de segurança
SESSION_COOKIE_SECURE=False  # True para HTTPS
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=3600  # 1 hora em segundos

# Configurações de log
LOG_LEVEL=INFO
LOG_FILE=logs/segcond.log

# Configurações de notificação (opcional)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=seu-email@gmail.com
# SMTP_PASSWORD=sua-senha-de-app
# NOTIFICATION_EMAIL=admin@segcond.com

# Configurações de PWA
PWA_NAME=SegCond
PWA_SHORT_NAME=SegCond
PWA_DESCRIPTION=Sistema de Vigilância para Condomínios
PWA_THEME_COLOR=#2196F3
PWA_BACKGROUND_COLOR=#2196F3

# Configurações de backup automático (opcional)
# BACKUP_ENABLED=True
# BACKUP_SCHEDULE=daily
# BACKUP_RETENTION_DAYS=30
# BACKUP_PATH=/backups/segcond

# Configurações de monitoramento (opcional)
# MONITORING_ENABLED=True
# MONITORING_INTERVAL=300  # 5 minutos em segundos
# ALERT_EMAIL=admin@segcond.com
